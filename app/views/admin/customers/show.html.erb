<h2>ユーザ詳細</h2>


  <table>
    <thead>
      <tr>
        <th>姓名</th>
        <th>セイメイ</th>
        <th>郵便番号</th>
        <th>住所</th>
        <th>email</th>
        <th>電話番号</th>
        <th>ステータス</th>
        <th colspan=3></th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><%= @customer.family_name %> <%= @customer.personal_name %></td>
        <td><%= @customer.family_name_kana %> <%= @customer.personal_name_kana %></td>
        <td><%= @customer.post_code %></td>
        <td><%= @customer.address %></td>
        <td><%= @customer.email %></td>
        <td><%= @customer.phone_number %></td>
