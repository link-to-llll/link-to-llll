<div class="container">
  <h2>ユーザ詳細</h2>
</div>
<div class="container text-center">
  <div class="row">
    <div class="col-md-5 text-right">
      <p><strong>姓名:</strong></p>
      <p><strong>セイメイ:</strong></p>
      <p><strong>郵便番号:</strong></p>
      <p><strong>住所:</strong></p>
      <p><strong>email:</strong></p>
      <p><strong>電話番号:</strong></p>
      <p><strong>ステータス:</strong></p>
    </div>
    <div class="col-md-7 text-left">
      <p><%= @customer.family_name %> <%= @customer.personal_name %></p>
      <p><%= @customer.family_name_kana %> <%= @customer.personal_name_kana %></p>
      <p><%= @customer.post_code %></p>
      <p><%= @customer.address %></p>
      <p><%= @customer.email %></p>
      <p><%= @customer.phone_number %></p>
      <p><%= @customer.status ? "有効" : "退会" %></p>
      <p><%= link_to 'ユーザ情報変更', edit_admin_customer_path(@customer), class: "btn btn-primary" %></p>
    </div>
  </div>
  <%= link_to '管理者TOP', admin_home_top_path, class: "btn btn-secondary me-2" %>
  <%= link_to 'カスタマー一覧', admin_customers_path, class: "btn btn-secondary me-2" %>
</div>

