<h1>注文情報詳細</h1>

<table class='table table-hover table-inverse'>
<thead>
  <tr>
    <th>注文日</th>
    <th>配送先</th>
    <th>支払方法</th>
    <th>ステータス</th>
  </tr>
</thead>
  <tbody>
    <tr>
       <td><%= @order.updated_at %></td>
        <td><%= @order.shipping_postal_code %><br>
            <%= @order.shipping_address %><br>
           <%= link_to admin_customer_path(@customer) do %>
         　<%= @order.shipping_name %>
           <% end %>
        </td>
      <td><%= @order.payment_method %></td>
      <td><%= @order.status %></td>
    </tr>
  </tbody>
</table>

<h2>請求情報</h2>
<table class='table table-hover table-inverse'>
<thead>
  <tr>
    <th>商品合計</th>
    <th>配送料</th>
    <th>ご請求額</th>
  </tr>
</thead>
  <tbody>
    <tr>
  　　 <td><%= @order.amount_billed %></td>
    　<td><%= @order.postage %></td>
    </tr>
  </tbody>
</table>