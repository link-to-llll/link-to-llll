<h2 class="head-line title_h2 text-center">商品編集</h2>
<div class="row">

  <%= form_for(@product, url: admin_product_path, method: :patch, class: "form-horizontal") do |f| %>
    <%= render "admin/shared/error_messages", resource: @product%>
    <div class="col-xs-4">
      <div class="img_field">
        <%= image_tag(@product, :image, size: "250x180") %>
      </div>
      <div class="form-group">
	      <%= f.field :image, class: " image" %>
      </div>
    </div>

    <div class="col-xs-6">
      <%= render "form_product", f: f %>
      <div class="actions">
	      <%= f.submit "変更を保存", class: "btn btn-primary pull-right" %>
      </div>

    </div>
  <% end %>
</div>