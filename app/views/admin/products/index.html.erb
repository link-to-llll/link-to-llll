<div class="container">
  <h2 class="head-line title_h2 text-center admin_product_index">商品一覧</h2>
  <div class="row">
    <div>
      <%= link_to new_admin_product_path, data: { turbolinks: false }, class: "btn btn-warning pull-right new_product" do %>
      <i class="fas fa-plus"></i>
      新規商品登録
      <% end %>

      <table class="table table-hover table-bordered table-condensed">
        <thead>
          <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>商品画像</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @products.each do |product| %>
          <tr>
            <td><%= product.id %></td>
            <td class="text-left">
              <%= link_to admin_product_path(product), class: "btn-link" do %>
                <%= product.name %>
              <% end %>
            </td>
            <td>
	            <%= image_tag product.image, size: '300x200' %>
	          </td>
            <td class="text-right"><%= number_to_currency(product.price, unit: "¥") %></td>
            <td><%= product.genre.name %></td>
            <td>
              <% if product.status == true %>
                <p><i class="fas fa-bullseye red"></i>販売中</p>
              <% elsif product.status == false %>
                <p><i class="fas fa-bullseye blue"></i>販売停止中</p>
              <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
      <%= paginate @products %>
    </div>
  </div>
</div>