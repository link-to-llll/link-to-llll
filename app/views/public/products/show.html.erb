<br>
<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

      <h2>商品詳細</h2>
	    <div class="field">
	    	     商品名　　　　　<%= @product.name %>
	    </div>
	    <div id="img_field">
	        <%= image_tag @product.image, class: "img-fluid", style: "max-width: 100%; height: auto;", fallback: "no_image.jpg" %>
	    </div>
	    <div class="field">
				商品説明　　　　<%= @product.explanation %>
	    </div>
	    <div class="field">
				ジャンル　　　　<%= @product.genre.name %>
	    </div>

	    <div class="field">
					税込価格　　　　<%= @product.add_tax_price %>円
	        								(<%= @product.price.to_s(:delimited) %>円)
					(税抜価格)
	    </div>
	    <div class="field">
					販売ステータス
	        <% if @product.status == true %>
						<!--<p><i class="fas fa-bullseye red"></i>販売中</p>-->
            <i class="fas fa-bullseye" style="color:green;"></i> <span style="color:green;font-weight:bold;">販売中</span>
					<% elsif @product.status == false %>
            <!--<p><i class="fas fa-bullseye blue"></i>販売停止中</p>-->
            <i class="fas fa-times" style="color:red;"></i> <span style="color:red;font-weight:bold;">販売停止中</span>
					<% end %>
	    </div>
      <div class="actions col-xs-9">
      <%= form_with model: @cart_item do |f| %>
      <%= f.label :quantity, "個数選択" %>
      <%= f.select :quantity, *[1..99] %>
            <%= f.hidden_field :product_id, :value => @product.id %>
            <%= f.submit "カートに入れる" %>
          <% end %>
         </div>
      </div>
    </div>
  </div>
</div>